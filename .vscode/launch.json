{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug poly-classic",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/poly-classic",
            "args": ["-i=demo/reflection.poly", "-t=1"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build poly-classic",
            "miDebuggerArgs": "/usr/bin/gdb"
        }
    ]
}