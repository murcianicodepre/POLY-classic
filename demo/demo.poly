# demo.poly ~ demo scene for poly-classic
# Diego Párraga Nicolás ~ diegojose.parragan@um.es

camera:
  position: [0.0, 0.1, -0.5]
  fov: 50.0

materials:
  - name: "sky_mat"
    diffuse: 2.0
    specular: 32.0
    texture: "textures/sky2.png"
  - name: "pc_mat"
    diffuse: 2.0
    specular: 32.0
    texture: "textures/ibm5110.png"
  - name: "floor_mat"
    diffuse: 2.0
    specular: 32.0
    texture: "textures/water.png"
    reflective: 0.5
  - name: "poly_mat"
    diffuse: 2.0
    specular: 32.0
    texture: "textures/poly_texture.png"

objects:
  - name: "sky"
    file: "models/sky.ply"
    material: "sky_mat"
    flags:
      - DISABLE_SHADING
    transforms:
      scale: 3.0
      move: [0.0, 0.0, 2.2]
  - name: "pc"
    file: "models/ibm5110.ply"
    material: "pc_mat"
    transforms:
      scale: 0.3
      rotate: [0.0, 20.0, 0.0]
      move: [0.2, -0.2, 1.1]
  - name: "floor"
    file: "models/quad.ply"
    material: "floor_mat"
    transforms:
      scale: 5.0
      rotate: [90.0, 0.0, 0.0]
      move: [0.0, -0.2, 2.0]
    transforms:
      scale: 0.27
      rotate: [0.0, -10.0, 30.0]
      move: [-0.18, 0.084 , 1.8]

lights:
  - position: [0.6, 0.5, 1.0]
    color: [255,0,0]
    intensity: 0.0
  - position: [-0.6, 1.0, -1.0]
    color: [255,255,255]
    intensity: 0.6 

