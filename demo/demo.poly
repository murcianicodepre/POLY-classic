# Declare camera
camera:
  position: [0.0, 0.0, -0.2]
  fov: 50.0

# Declare materials with names
materials:
  - name: "cube_mat"
    texture: "textures/demo_texture.png"
    diffuse: 2.0
    specular: 32.0
  - name: "sky_mat"
    texture: "textures/sky1.png"
    diffuse: 2.0
    specular: 32.0
  - name: "floor_mat"
    texture: "textures/floor_texture.png"
    diffuse: 2.0
    specular: 32.0

# Declare objects with names
objects:
  - name: "cube"
    file: "models/cube.ply"
    material: "cube_mat"
    transforms:
      scale: 0.5
      rotate: [-20.0, 45.0, 0]
      move: [0.0, 0.0, 1.0]
  - name: "sky"
    file: "models/sky.ply"
    material: "sky_mat"
    flags:
      - DISABLE_SHADING
    transforms:
      move: [0.0, 0.0, 1.0]
  - name: "floor"
    file: "models/quad.ply"
    material: "floor_mat"
    transforms:
      scale: 1.5
      rotate: [90.0, 0.0, 0.0]
      move: [0.0, -0.4, 1.5]

# Declare world lighting 
lights:
  - position: [0.6, 1.0, -1.0]
    color: [255, 255, 255]
    intensity: 0.8