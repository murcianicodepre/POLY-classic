# demo.poly
debug:
  - DRAW_AABB
  - DISABLE_FAST_INTERSECTION_SHADER

camera:
  position: [0.0, 0.0, 0.0]
  fov: 50.0

materials:
  - name: "sky_mat"
    texture: "textures/sky2.png"
    diffuse: 0.0
    specular: 0.0
  - name: "cube_mat"
    texture: "textures/demo_texture.png"
    bump: "textures/normal1.png"
    diffuse: 2.0
    specular: 16.0
  - name: "floor_mat"
    texture: "textures/water.png"
    diffuse: 2.0
    specular: 32.0
    reflective: 0.5
  - name: "cone_mat"
    color: [255,255,0]
    diffuse: 2.0
    specular: 32.0
  - name: "mirror_mat"
    color: [255,0,255]
    diffuse: 2.0
    specular: 32.0
    reflective: 1.0

objects:
  - name: "sky"
    file: "models/sky.ply"
    material: "sky_mat"
    flags:
      - DISABLE_SHADING
      # - DISABLE_RENDERING
    transforms:
      scale: 5.0
      move: [0.0, 0.0, 3.0]

  - name: "cube"
    file: "models/cube.ply"
    material: "cube_mat"
    transforms:
      scale: 0.2
      rotate: [-20.0, 45.0, 0.0]
      move: [0.0, 0.06, 1.5]

  - name: "floor"
    file: "models/quad.ply"
    material: "floor_mat"
    flags:
    transforms:
      scale: 6.0
      rotate: [90.0, 0.0, 0.0]
      move: [0.0, -0.3, 3.0]

  - name: "cone"
    file: "models/cone.ply"
    material: "cone_mat"
    flags:
    transforms:
      scale: 0.3
      rotate: [0.0, 0.0, 20.0]
      move: [-0.6, 0.06, 1.7]

  - name: "minicube"
    file: "models/cube.ply"
    material: "mirror_mat"
    flags:
    transforms:
      scale: 0.1
      rotate: [-20.0, 45.0, 30.0]
      move: [0.34, 0.06, 1.1]

lights:
  - type: "point"
    #position: [-0.5, 1.0, 0.0]
    position: [0.5, 1.0, 0.0]
    color: [255,255,255]
    intensity: 1.5
  - type: "point"
    position: [0.34, 0.06, 0.5]
    color: [255,0,0]
    intensity: 0.0
  - type: "ambient"
    color: [100,100,100]
    intensity: 0.4