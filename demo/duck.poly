# duck demo
debug:
  - DISABLE_REFLECTIONS
  - DISABLE_FAST_INTERSECTION_SHADER

camera:
  position: [0.0, 0.15, 0.0]
  fov: 40.0

materials: 
  - name: "sky_mat"
    texture: "textures/sky2.png"
    diffuse: 2.0
    specular: 0.0
  - name: "duck_mat"
    texture: "textures/duck.png"
    bump: "textures/duck_normal.png"
    diffuse: 2.0
    specular: 32.0
  - name: "floor_mat"
    texture: "textures/water.png"
    bump: "textures/water_bump.png"
    diffuse: 2.0
    specular: 32.0
    reflective: 0.3

objects:
  - name: "sky"
    file: "models/sky.ply"
    material: "sky_mat"
    flags:
      - DISABLE_SHADING
    transforms:
      scale: 5.0
      move: [0.0, 0.0, 3.0]
  - name: "duck"
    file: "models/duck.ply"
    material: "duck_mat"
    flags:
    transforms:
      rotate: [0.0, 30.0, 0.0]
      move: [0.0, -0.2, 2.0]
  - name: "floor"
    file: "models/quad.ply"
    material: "floor_mat"
    flags:
    transforms:
      scale: 3.0
      rotate: [90.0, 0.0, 0.0]
      move: [0.0, -0.21, 2.0]

lights:
  - type: directional
    direction: [0.5, 1.0, -2.0]
    color: [255,255,255]
    intensity: 0.5
  - type: "point"
    position: [-0.6, 0.7, 2.0]
    color: [255,0,0]
    intensity: 1.0