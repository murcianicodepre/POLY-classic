
# duck demo

camera:
  position: [0.0, 0.25, 0.0]
  fov: 40.0

materials: 
  
  - name: "duck_mat"
    texture: "textures/pc-jo.png"
    color: [255,0,0]
    #bump: "textures/duck_bump.png"
    diffuse: 2.0
    specular: 32.0
    
  - name: "mat1"
    texture: "textures/demo_texture.png"
    color: [0,255,0]
    diffuse: 2.0
    specular: 16.0

  - name: "sky_mat"
    texture: "textures/sky3.png"
    color: [0,0,255]
    diffuse: 2.0
    specular: 0.0

objects:
  - name: "sky"
    file: "models/sky.ply"
    material: "sky_mat"
    flags:
      - DISABLE_SHADING
    transforms:
      scale: 3.0
      move: [0.0, 0.0, 2.0]

  - name: "duck"
    file: "models/cube.ply"
    material: "duck_mat"
    transforms:
      scale: 0.3
      #rotate: [0.0, 30.0, 0.0]
      #move: [0.0, -0.2, 2.0]
      move: [0.0, 0.0, 2.0]

  - name: "floor"
    file: "models/quad.ply"
    material: "mat"
    transforms:
      scale: 1.5
      rotate: [90.0, 0.0, 0.0]
      move: [0.0, -0.2, 2.0]


lights:
  - type: directional
    direction: [0.5, 1.0, -2.0]
    color: [255,255,255]
    intensity: 0.5
  - type: "ambient"
    intensity: 0.2
    color: [255,0,0]
