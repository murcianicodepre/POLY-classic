#bump demo

camera:
  position: [0.0, 0.0, 0.0]
  fov: 50

materials:
  - name: "sky_mat"
    texture: "textures/sky2.png"
    diffuse: 0.0
    specular: 0.0
  - name: "mat"
    texture: "textures/cobblestone.png"
    bump: "textures/cobblestone_bump.png"
    diffuse: 2.0
    specular: 32.0
  
objects:
  - name: "sky"
    file: "models/sky.ply"
    material: "sky_mat"
    flags:
      - DISABLE_SHADING
    transforms:
      scale: 3.0
      move: [0.0, 0.0, 1.5]

  - name: "sphere"
    file: "models/sphere.ply"
    material: "mat"
    transforms:
      scale: 0.5
      move: [0.0, 0.0, 1.5]

lights:
  - type: point
    position: [-0.5, 0.5, 0.5]
    color: [255,255,255]
    intensity: 0.8